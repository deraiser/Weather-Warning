{
    "include": [
        "node_modules/@woltlab/wcf/global.d.ts",
        "ts/**/*"
    ],
    "compilerOptions": {
        "allowJs": true,
        "target": "es2019",
        "module": "amd",
        "rootDir": "ts/",
        "outDir": "files/js/",
        "lib": [
            "dom",
            "es2019"
        ],
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@woltlab/wcf/ts/*"
            ]
        },
        "importHelpers": true,
        "newLine": "lf"
    },
    "compileOnSave": true
}